<!--        </collection>-->
<!--    </resultMap>-->

    <select id="findRoleByUserName" parameterType="String" resultType="com.liu.entity.Role">
        SELECT r.id,
               r.name
        FROM t_user u
        LEFT JOIN
             t_user_role ur
        ON
             u.id = ur.userid
        LEFT JOIN
             t_role r
        ON
             ur.roleid = r.id
        WHERE u.username = #{name}
    </select>

</mapper>
